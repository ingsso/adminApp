<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">

    <ImageView
        android:id="@+id/marker_noti"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="130dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/noti_marker"/>

    <android.widget.Button
        android:id="@+id/btn_map_tap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/marker_noti"
        android:layout_marginTop="70dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="70dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="70dp"
        android:text="이미지 확인"
        android:textSize="20sp"
        android:fontFamily="@font/esamanru"
        android:background="@drawable/yellow_button"/>


    <android.widget.Button
        android:id="@+id/btn_org_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_map_tap"
        android:layout_marginTop="70dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="70dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="70dp"
        android:text="시/구/군 설정"
        android:textSize="20sp"
        android:fontFamily="@font/esamanru"
        android:background="@drawable/blue_button"/>

    <TextView
        android:id="@+id/tv_org"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_org_set"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:fontFamily="@font/esamanru"
        android:textColor="@color/gray"/>

</RelativeLayout>